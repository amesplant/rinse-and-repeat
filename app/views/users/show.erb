<h1><%= @user.username %><h1>

<table id="statistics">
  <% if @rounds %>
    <tr>
      <th>Deck</th>
      <th>Date</th>
      <th>Cards in Deck</th>
      <th>First Guess Correct</th>
      <th>Total Guesses</th>
    </tr>
    <% @rounds.each do |round| %>
    <tr>
      # deck name
      <td><%= round.deck.name %></td>
      <td><%= round.created_at.strftime("%m/%d/%y") %></td>
      # cards in deck
      <td><%= round.correct_first_guesses %></td>
      <td><%= round.total_guesses %></td>
    </tr>
<% end %>
<% end %>
</table>
